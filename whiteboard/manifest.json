{
    "manifest_version": 2,
    "name": "Whiteboard",
    "version": "0.0.1",

    "description": "Blackboard alert",

    "background": {
        "scripts": ["js/back/APIgetinfo.js", "js/back/BBgetinfo.js", "js/back/init.js", "js/back/background.js"],
        "persistent": false
    },

    "browser_action": {
        "default_popup": "popup.html"
    },

    "permissions": [
        "storage",
        "notifications",
        "https://*.korea.ac.kr/*",
        "http://*.korea.ac.kr/*"
    ]
}