{
    "manifest_version": 2,
    "name": "Whiteboard",
    "version": "0.0.1",

    "description": "Blackboard alert",

    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },

    "content_scripts": [
        {
        "matches": ["https://kulms.korea.ac.kr/*"],
        "js": ["js/jquery-3.4.1.min.js", "js/LinkedList.js", "js/getinfo.js" ],
        "run_at": "document_idle"
        }
    ],

    "browser_action": {
        "default_popup": "popup.html"
    },

    "permissions": [
        "storage",
        "webNavigation",
        "tabs",
        "notifications",
        "activeTab",
        "http://*/",
        "https://*/"
    ]
}